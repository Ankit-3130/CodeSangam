<section id="private-room" class="d-none">
    <div class="row justify-content-between mx-0">
        <div class="col-md-6 order-2 order-md-0 bg-white rounded h-100 p-3">
            <h1 class="text-center">Settings</h1>
            <div class="input-group mb-3">
                <label class="input-group-text" for="rounds">Rounds</label>
                <select class="form-select" id="rounds">
                    <option value="1" selected>1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>
            <div class="input-group mb-3">
                <label class="input-group-text" for="time">Draw time in seconds</label>
                <select class="form-select" id="time">
                    <option value="10">10</option>
                    <option value="20">20</option>
                    <option value="30">30</option>
                    <option value="40" selected>40</option>
                    <option value="50">50</option>
                    <option value="60">60</option>
                    <option value="70">70</option>
                    <option value="80">80</option>
                    <option value="90">90</option>
                    <option value="100">100</option>
                    <option value="110">110</option>
                    <option value="120">120</option>
                </select>
            </div>
           
            <button class="btn btn-primary w-100" id="startGame" >Start Game</button>
        </div>
        <div class="col-md-6 text-black h-100 p-3">
            <h1 class="text-center">Players</h1>
            <div class="row mt-4 mx-0" style="height: 20em; overflow-y: auto;" id="playersDiv"></div>
        </div>
        
    </div>
    <div class="mt-5">
        <h1 class="text-white text-center">Invite your friends!</h1>
        <div class="input-group mb-3">
            <input type="text" id="gameLink" class="form-control text-center fw-bold bg-white"
                value="http://localhost:3000/" readonly>
            <button class="btn btn-warning" type="button" id="copy">Copy Link</button>
        </div>
    </div>
</section>